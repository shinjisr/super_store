<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Tel</th>
      <th>Storage:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.address %></td>
        <td><%= store.tel %></td>
        <td><%= store.books.length %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path, class:'btn btn-primary' %>
<%= link_to 'Author List', authors_path, class:'btn btn-info' %>
<%= link_to 'Book List', books_path, class:'btn btn-info' %>
